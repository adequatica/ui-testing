{
  "name": "ui-testing",
  "version": "1.0.0",
  "description": "UI Testing with TypeScript and Playwright",
  "keywords": [
    "testing",
    "playwright"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/adequatica/ui-testing"
