  "devDependencies": {
    "@eslint/js": "9.14.0",
    "@stylistic/eslint-plugin-ts": "2.10.1",
    "@types/eslint__js": "8.42.3",
    "@types/node": "22.9.0",
    "@typescript-eslint/parser": "8.13.0",
    "eslint": "9.14.0",
    "eslint-config-prettier": "9.1.0",
